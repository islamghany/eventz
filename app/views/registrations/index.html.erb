<h1 class="font-bold text-2xl">Registrations <%= link_to @event.name, @event, class: "text-blue-500 underline"
%> </h1>

<ul class="mt-4">
  <% @registrations.each do |registration| %>
    <li class="flex justify-between items-center border-b border-gray-200 py-2">
      <span><%= registration.name %></span>
      <span><%= registration.email %></span>
      <span><%= registration.how_heard %></span>
      <span><%= registration.created_at %></span>
    </li>
  <% end %>
</ul>