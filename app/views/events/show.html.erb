    <div class="flex justify-between items-center">
        <h1 class="text-3xl font-bold text-gray-800"> <%= @event.name%> </h1>
            <%= link_to "Edit", edit_event_path(@event), class: "bg-blue-500 cursor-pointer hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
            <%= link_to "Delete", event_path(@event), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "bg-red-500 cursor-pointer hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>  
    </div>
    <div class="mt-4">
        <p class="text-gray-800"><%= @event.description %></p>
    </div>
    <div class="mt-4">
        <p class="text-gray-800">Starts at: <%= @event.starts_at %></p>
    </div>
    <div class="mt-4">
        <p class="text-gray-800">Location: <%= @event.location %></p>
    </div>
    <div class="mt-4">
        <p class="text-gray-800">Price: <%= @event.price %></p>
    </div>
    <div class="mt-4">
        <p class="text-gray-800">Created at: <%= @event.created_at %></p>
        <p class="text-gray-800">Updated at: <%= @event.updated_at %></p>
    </div>

    <div class="mt-4">
         <%= link_to "Back", events_path, class: "bg-gray-500 cursor-pointer hover:bg-gray-700 text-white font-bold py-2 px-4 rounded"  %>
    </div>
